cam_dispersion          		= 0.0125		;увеличения угла (в градусах) с каждым выстрелом
cam_dispersion_inc			= 0.17		;увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac			= 0.59		;ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle				= 6.0	    	;максимальный угол отдачи
cam_max_angle_horz			= 8.0		;(degree) maximum shot horizontal degree 
cam_step_angle_horz			= 0.9		;(degree) size of step camera moved in horizontal position while shooting


