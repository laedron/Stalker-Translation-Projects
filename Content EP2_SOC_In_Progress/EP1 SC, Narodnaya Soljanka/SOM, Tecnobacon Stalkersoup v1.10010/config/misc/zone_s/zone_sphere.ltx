;<!-- TB3D 1.0.1e -->
[zone_sphere]
GroupControlSection	= spawn_group_zone
$spawn 			= "zones\sphere"
$prefetch 		= 16
class			= ZS_GALAN
script_binding     = amk_anoms.bind

hit_impulse_scale	= .04
effective_radius	= 0.99 ;size range as a percentage of the original, which has a zone
sound			= zone_mosquito_bald
postprocess		= postprocess_electra

ef_anomaly_type		= 1
ef_weapon_type			= 13

artefacts		   = af_electra_sparkler,0.7, af_electra_flash, 0.25, af_electra_moonlight, 0.05
BirthProbability = 0.1

;----------- Anomaly settings -----------------------
min_start_power		= 0.99
max_start_power		= 1.00
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

idle_particles		= anomaly2\generator\anomaly_teleport_00001
blowout_particles	= anomaly2\electra2_blast ;gravity_blast_03
tearing_particles	=anomaly2\body_tear_00
torn_particles      =anomaly2\body_tear_01

hit_small_particles			= hit_fx\hit_metal_02
hit_big_particles			= anomaly2\gravity_damage_02_blood2
idle_small_particles		= anomaly2\electra_damage_01_smoke
idle_big_particles			= anomaly2\electra_damage_02_smoke
entrance_small_particles	= anomaly2\gravi_anomaly_shield_00
entrance_big_particles		= anomaly2\emi_entrance_big_00;

tele_particles_small		= anomaly2\gravity_damage_01_smoke	;anomaly2\gravity_damage_01_smoke
tele_particles_big			= anomaly2\gravity_damage_02_smoke	

idle_sound			= anomaly\torrid_idle							;constant sound
blowout_sound		= anomaly\electra_blast1; anomaly\gravi_blowout6; anomaly_gravy_blast01	;during ejection (stroke) in the center of the anomaly
hit_sound			= anomaly\electra_hit; anomaly\anomaly_gravy_hit1						;on the character when he gets hit
body_tearing_sound	= anomaly\anomaly_body_tear_1						;sound of tearing of the corpse
entrance_sound		= anomaly\gravi_idle01								;in contact with the object of an anomaly

blowout_light		    = on
light_color		    = 0.8,0.9,1
light_range		    = 30.0
light_time 		    = 1
light_height		    = 1.5			;rise to the height of the light source

idle_light		= off

hit_type		     = shock

disable_time		= 5000	;while ignoring the inanimate object in the zone (-1 if not required)
disable_time_small	= 500	;while ignoring the small inanimate object in the zone (-1 if not required)
disable_idle_time	= 100	;timeout idle partiklov

awaking_time		= 200
blowout_time		= 1500	
accamulate_time	= 1000

ignore_nonalive	= false
ignore_small		= true
ignore_artefacts	= true

;telekinesis parameters for the zone
throw_in_impulse			  = 	5000		;power pulse retraction (for a body 100kg)
throw_out_impulse			  =	900		;ejection force blast
throw_in_impulse_alive		  = 	800 	     ;pulse power retracting the living
throw_in_atten				  = 	6		;coeff. delay (less is more smoothly pulls)
blowout_radius_percent		  = 	0.9		;radius (as a percentage of the total radius), direct emissions
actor_blowout_radius_percent   =	0.5

tele_height				= 0.1		;height of telekinesis 
time_to_tele			     = 5000		;time derazhaniya object in the air
tele_pause				= 5000		;pause before once again raise the fallen object

visible_by_detector = on

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; wind
blowout_wind		         = on

blowout_wind_time_start     = 0
blowout_wind_time_peak      = 1500
blowout_wind_time_end	    = 2990
blowout_wind_power		    = 0.5			;Wind power raises (from 0 to 1), at the time blowout_wind_time_peak

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;creation of artifacts during the operation
spawn_blowout_artefacts = off



