[zone_monolith]
GroupControlSection	= spawn_group_zone
$spawn 			= "zones\monolith"
;$prefetch 		= 16
class			= Z_RADIO
hit_impulse_scale	= .01
effective_radius	= 1.00 ;size range as a percentage of the original, which has a zone
sound			= zone_mosquito_bald
postprocess		= postprocess_electra

ef_anomaly_type			= 3
ef_weapon_type			= 15

artefacts		 = af_ameba_slime, 0.6, af_ameba_slug, 0.2, af_ameba_mica, 0.2
BirthProbability = 0.1

;----------- Anomaly settings -----------------------
min_start_power		= 0.99
max_start_power		= 1.00
attenuation			= 0.1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

hit_type		= telepatic

idle_particles		= anomaly2\monolith
blowout_particles	= anomaly2\monolith_active

disable_time		= -1	;while ignoring the inanimate object in the zone (-1 if not required)
disable_time_small	= -1		;while ignoring the small inanimate object in the zone (-1 if not required)
disable_idle_time	= -1	;timeout idle partiklov

idle_sound			= anomaly\monolith_idle; anomaly_gravy_idle
blowout_sound		= anomaly\monolith_idle

ignore_nonalive		= true;
ignore_small		= true;
ignore_artefacts	= true

blowout_light		= off
idle_light			= off

awaking_time		= 1
blowout_time		= 9000	
accamulate_time		= 1

visible_by_detector = on

blowout_wind		= off

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;creation of artifacts during the operation
spawn_blowout_artefacts = off


