;<!-- TB3D 1.0.1e -->
[zone_radioactive]
GroupControlSection	= spawn_group_zone
$spawn 			= "zones\radioactive"
;$prefetch 		= 16
class			= Z_RADIO
hit_impulse_scale	= .01
effective_radius	= 1.00 ;size range as a percentage of the original, which has a zone
sound			= zone_mosquito_bald
postprocess		= postprocess_rad

ef_anomaly_type			= 3
ef_weapon_type			= 15

artefacts		= 
BirthProbability = 0.0;0.1

;----------- Anomaly settings -----------------------
min_start_power		= 0.99
max_start_power		= 1.00
attenuation			= 0.1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

hit_type		= radiation

disable_time		= -1	;while ignoring the inanimate object in the zone (-1 if not required)
disable_time_small	= -1	;while ignoring the small inanimate object in the zone (-1 if not required)
disable_idle_time	= -1	;timeout idle partiklov

ignore_nonalive		= true;
ignore_small		= false;
ignore_artefacts	= true

blowout_light		= off
idle_light			= off

awaking_time		= 100
blowout_time		= 100	
accamulate_time		= 500

visible_by_detector = on

blowout_wind		= off

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;creation of artifacts during the operation
spawn_blowout_artefacts = off

[zone_radioactive_weak]:zone_radioactive
$spawn 			= "zones\radioactive_weak"

awaking_time		= 100
blowout_time		= 100	
accamulate_time		= 100

;----------- Anomaly settings -----------------------
min_start_power		= 0.01
max_start_power		= 0.011



[zone_radioactive_average]:zone_radioactive
$spawn 			= "zones\radioactive_average"
awaking_time		= 100
blowout_time		= 100	
accamulate_time		= 100

;----------- Anomaly settings -----------------------
min_start_power		= 0.03
max_start_power		= 0.031



[zone_radioactive_strong]:zone_radioactive
$spawn 			= "zones\radioactive_strong"

awaking_time		= 100
blowout_time		= 100	
accamulate_time		= 100

;----------- Anomaly settings -----------------------
min_start_power		= 0.06
max_start_power		= 0.061



[zone_radioactive_killing]:zone_radioactive_strong
$spawn 			= "zones\radioactive_killing"
[zone_radioactive_dyn]:zone_radioactive_weak
$spawn 			= "zones\radioactive_dyn"

[zone_radioactive_tb3d]:zone_radioactive_strong
$spawn 			= "zones\radioactive_killing"
