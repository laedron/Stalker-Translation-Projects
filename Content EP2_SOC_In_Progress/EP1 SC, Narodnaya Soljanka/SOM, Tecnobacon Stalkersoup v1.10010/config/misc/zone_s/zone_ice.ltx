;<!-- TB3D 1.0.1e -->
[zone_ice]
GroupControlSection     = spawn_group_zone
$spawn            = "zones\mincer zone"
$prefetch           = 16
class           = ZS_ICE  
script_binding = amk_anoms.bind

ef_anomaly_type       = 2
ef_weapon_type        = 14

sound           = zone_mosquito_bald
;postprocess          = postprocess_gravi
hit_effect          = amk\ice_hit

artefacts         = af_blood,0.7, af_mincer_meat, 0.25,af_soul, 0.05
BirthProbability      = 0.1

;----------- Anomaly settings -----------------------
min_start_power   = 0.99
max_start_power   = 1.00
attenuation     = 1
period        = 1
min_artefact_count  = 0
max_artefact_count  = 0

tearing_particles     =amk\blow_body
torn_particles        =anomaly2\gravi_anomaly_shield_00
idle_particles       = amk\snow
accum_particles       = amk\snow_blow_accum
awake_particles       = amk\snow_blow_accum
blowout_particles     = amk\snow_blow ;gravity_blast_03

hit_small_particles     = hit_fx\hit_metal_02
hit_big_particles     = amk\ice_enter
idle_small_particles    = amk\ice_enter_small
idle_big_particles      = anomaly2\gravity_damage_02_blood2; anomaly2\gravity_damage_02_smoke
entrance_small_particles  = anomaly2\gravi_anomaly_shield_00
entrance_big_particles    = anomaly2\gravi_anomaly_00;

tele_particles_small    = anomaly2\gravity_damage_01_smoke  ;anomaly2\gravity_damage_01_smoke
tele_particles_big      = anomaly2\gravity_damage_02_smoke  

idle_sound          = anomaly\gravi_idle01            ;constant sound
awake_sound         = anomaly\gravi_idle01
accum_sound         = anomaly\gravi_idle01
blowout_sound       = anomaly\anomaly_mincer_blowout; anomaly_gravy_blast01   ;during ejection (stroke) in the center of the anomaly  
hit_sound         = anomaly\anomaly_gravy_hit1                ;on the character when he gets hit
entrance_sound        = anomaly\gravi_idle01                    ;in contact with the object of an anomaly
body_tearing_sound      = anomaly\anomaly_body_tear_1               ;sound of tearing of the corpse
hit_type          = strike
hit_impulse_scale     = 0.1             ;the ratio of the physical momentum and energy hit
effective_radius      = 1.0              ;size range as a percentage of the original, which has a zone

disable_time        = -1              ;while ignoring the inanimate object in the zone (-1 if not required)
disable_time_small      = -1              ;while ignoring the small inanimate object in the zone (-1 if not required)
disable_idle_time     = 2000             ;timeout idle partiklov

ignore_nonalive       = false
ignore_small        = true
ignore_artefacts      = true

blowout_light       = on
light_color         = 1.0,1.9,2.0
light_range         = 20.0
light_time          = 0.38 ;0.35
light_height        = 1.5               ;rise to the height of the light source

idle_light          = off

awaking_time        = 50
blowout_time        = 1500
accamulate_time       = 500

blowout_particles_time    = 50
blowout_sound_time      = 1300
blowout_light_time      = 1300
blowout_explosion_time    = 1400

;telekinesis parameters for the zone
throw_in_impulse        = 100;4000           ;retracting force for unit mass at a distance of one meter
throw_out_impulse       = 10; 1000          ;ejection force blast
throw_in_impulse_alive      = 100;800; 250;200 800     ;pulse power retracting the living
throw_in_atten          = 1.5; 1.2  ;3          ;coeff. delay (less is more smoothly pulls)
blowout_radius_percent      = 1.0;0             ;radius (as a percentage of the total radius), direct emissions
actor_blowout_radius_percent  = 1.0;0.5
tele_height           = 0.1;1.5           ;height of telekinesis
time_to_tele          = 1              ;time derazhaniya object in the air
tele_pause            = 4000              ;pause before once again raise the fallen object

visible_by_detector     = on

;; ветер
blowout_wind        = on

blowout_wind_time_start     = 0
blowout_wind_time_peak      = 5900
blowout_wind_time_end   = 10000;9999
blowout_wind_power      = 0.5               ;Wind power raises (from 0 to 1), at the moment blowout_wind_time_peak 

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;creation of artifacts during the operation
spawn_blowout_artefacts   = on

artefact_spawn_probability  = 0.09                ;the probability that during the operation of the anomalies will be born artifact
artefact_spawn_particles  = anomaly2\gravi_anomaly_shield_00  ;partikly, who played in the birth place of the artifact (optional)
artefact_born_sound     = anomaly\pux_blast         ;sound, who played in the birth place of the artifact (optional)
throw_out_power       = 15                ;momentum with which the artifact will be thrown out of the zone in any direction
artefact_spawn_height   = 10                ;(м) height at the center of the area where the artifact will be born

[caps_ice_average]:zone_ice
