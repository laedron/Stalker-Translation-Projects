[zone_witches_galantine]
GroupControlSection = spawn_group_zone
$spawn      = "zones\witches galantine"
$prefetch     = 16
class     = ZS_ELECT
script_binding = amk_anoms.bind

hit_impulse_scale = .03
effective_radius  = 0.75 ;size range as a percentage of the original, which has a zone
sound     = zone_mosquito_bald
postprocess   = postprocess_electra

ef_anomaly_type     = 1
ef_weapon_type      = 13

artefacts   = af_electra_sparkler,0.7, af_electra_flash, 0.25, af_electra_moonlight, 0.05
BirthProbability = 0.1

;----------- Anomaly settings -----------------------
min_start_power   = 0.99
max_start_power   = 1.00
attenuation     = 1
period        = 1
min_artefact_count  = 0
max_artefact_count  = 0

idle_particles    = anomaly2\electra_idle
blowout_particles = anomaly2\electra2_blast

hit_small_particles     = anomaly2\electra_entrance_small
hit_big_particles     = anomaly2\electra_damage_02_smoke
idle_small_particles    = anomaly2\electra_damage_01_smoke
idle_big_particles      = anomaly2\electra_damage_02_smoke
entrance_small_particles  = anomaly2\electra_entrance_small
entrance_big_particles    = anomaly2\emi_entrance_big_00

idle_sound      = anomaly\electra_idle1; anomaly_gravy_idle
blowout_sound   = anomaly\electra_blast1
hit_sound     = anomaly\electra_hit
entrance_sound    = anomaly\electra_hit

blowout_light   = on
light_color       = 0.8,0.9,1
light_range       = 30.0
light_time        = 1;0.35
light_height    = 1.5     ;rise to the height of the light source

idle_light      = off

hit_type    = shock

disable_time    = 50  ;while ignoring the inanimate object in the zone (-1 if not required)
disable_time_small  = 500   ;while ignoring the small inanimate object in the zone (-1 if not required)
disable_idle_time = 100 ;timeout idle partiklov

awaking_time    = 100
blowout_time    = 1000  
accamulate_time   = 1000

ignore_nonalive   = false
ignore_small    = false
ignore_artefacts  = true

visible_by_detector = on

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; wind
blowout_wind    = off

blowout_wind_time_start     = 0
blowout_wind_time_peak      = 150
blowout_wind_time_end   = 299
blowout_wind_power      = 0.2     ;Wind power raises (from 0 to 1), at the moment blowout_wind_time_peak 

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;creation of artifacts during the operation
spawn_blowout_artefacts = off



[zone_witches_galantine_weak]:zone_witches_galantine
$spawn      = "zones\witches galantine weak"

artefacts   = af_electra_sparkler,0.8, af_electra_flash, 0.2, af_electra_moonlight, 0.0
