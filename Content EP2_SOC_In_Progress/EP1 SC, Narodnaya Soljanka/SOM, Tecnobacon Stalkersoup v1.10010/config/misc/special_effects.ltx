;<!-- TB3D 1.0.9.9.3.3 --> Ghost (by Amik), added tb3d dynamic zones
[zone_grost]
GroupControlSection	= spawn_group_zone
$spawn 			    = "zones\zone_grost"
class			    = Z_RADIO
ef_anomaly_type		= 3
ef_weapon_type		= 15
hit_impulse_scale	= 0.5
effective_radius	= 0.75   ;size range as a percentage of the original, which has a zone

sound			    = zone_mosquito_bald
;postprocess		    = postprocess_new
artefacts	        =
BirthProbability    = 0.0

min_start_power		= 0.99
max_start_power		= 1.00
attenuation		    = 1
period			    = 1
min_artefact_count	= 0
max_artefact_count	= 0
hit_type		    = shock

disable_time		= -1	;while ignoring the inanimate object in the zone (-1 if not required)
disable_time_small	= 500	;while ignoring the small inanimate object in the zone (-1 if not required)
disable_idle_time	= -1	;idle timeout partiklov

ignore_nonalive		= true
ignore_small		= false
ignore_artefacts	= true

;idle_particles		= test_outdoor
blowout_particles	= none ;amik\grost\grost
idle_sound		    = anomaly\grost\idle_3
blowout_sound		= anomaly\grost\roar

awaking_time		= 40
blowout_time		= 5000	
accamulate_time		= 50

blowout_light	    = off
idle_light	        = off
visible_by_detector = off
blowout_wind	    = off
spawn_blowout_artefacts = off

; Cockroaches on the floor (by Amik)
[zone_cockroach]:zone_grost
$spawn 			= "zone_cockroach"
idle_sound		= $no_sound
blowout_sound	= $no_sound
idle_particles	= amik\monsters\cockroach\cockroach_idle

