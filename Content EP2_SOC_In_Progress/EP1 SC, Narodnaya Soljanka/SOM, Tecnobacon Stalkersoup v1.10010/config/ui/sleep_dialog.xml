<?xml version="1.0" encoding="UTF-8"?>
<!-- ************ TB3D 1.0.9.9.7.0 *************** -->
<!-- *************** SLEEP DIALOG IN INVENTORY MENU *************** -->
<window>
	<!-- *************** ICON *************** -->
	<icon_static x="0" y="0" width="64" height="64" scale="0.5"/>
	<!-- *************** NAME *************** -->
	<static x="20" y="35" width="240" height="60">
		<text x="0" y="0" font="letterica18" r="255" g="128" b="64"/>
	</static>
	<!-- *************** INFO PANELS *************** -->
	<curr_time_static x="98" y="35" width="150" height="40">
		<!-- ***************	<texture>ui\ui_button_01</texture> *************** -->
		<text x="0" y="0" font="letterica18" r="255" g="128" b="64">curr_time_ui</text>
	</curr_time_static>
	<rest_amount_static x="118" y="75" width="110" height="40">
		<!-- ***************	<texture>ui\ui_button_02</texture> *************** -->
		<text x="0" y="0" font="letterica18" r="255" g="128" b="64">rest_ui</text>
	</rest_amount_static>
	<!-- *************** PLUS, MINUS BUTTON *************** -->
	<plus_button x="23" y="60" width="50" height="40">
		<texture>ui\ui_button_01</texture>
		<text>+</text>
	</plus_button>
	<minus_button x="193" y="60" width="50" height="40">
		<texture>ui\ui_button_01</texture>
		<text>-</text>
	</minus_button>
	<!-- *************** FIXED AMOUNT INCREASE *************** -->
	<inc_button x="58" y="110" width="150" height="40">
		<texture>ui\ui_button_01</texture>
		<text>1_hour_ui</text>
	</inc_button>
	<inc_button x="58" y="160" width="150" height="40">
		<texture>ui\ui_button_01</texture>
		<text>4_hour_ui</text>
	</inc_button>
	<inc_button x="58" y="210" width="150" height="40">
		<texture>ui\ui_button_01</texture>
		<text>8_hour_ui</text>
	</inc_button>
	<!-- *************** REST UNTIL MORNING AND EVENING *************** -->
	<to_morning_button x="58" y="260" width="150" height="40" to_hour="8" to_min="10">
		<texture>ui\ui_button_01</texture>
		<text>to_morning_ui</text>
	</to_morning_button>
	<to_evening_button x="58" y="310" width="150" height="40" to_hour="22" to_min="30">
		<texture>ui\ui_button_01</texture>
		<text>to_evening_ui</text>
	</to_evening_button>
	<!-- *************** CLOSE AND REST *************** -->
	<rest_button x="3" y="450" width="124" height="40">
		<texture>ui\ui_button_01</texture>
		<text>rest_ui</text>
	</rest_button>
	<close_button x="133" y="450" width="124" height="40">
		<texture>ui\ui_button_01</texture>
		<text>close_ui</text>
	</close_button>
</window>
