function load_states( gname, type )
	if type == "agr_nii" then
		return function(gulag)
			if db.actor and gulag then
				local alarm = false
				if has_alife_info( "agr_nii_sniper_alarm" ) then
					alarm = true
				else
					for k, v in pairs(gulag.Object) do
						if v ~= true and v:best_enemy() ~= nil and v:best_enemy():id() == db.actor:id() then
							alarm = true
							break
						end
					end
				end
				if alarm then
					TB3D_Services.give_info( "agr_nii_alarm" )
					return 3
				else
					TB3D_Services.remove_info( "agr_nii_alarm" )
				end
				if level.get_time_hours() >= 23 or level.get_time_hours() < 3 then
					return 2 
				end
			end
			if TB3D_Services.is_night(false) then return 1 else return 0 end
		end
	elseif type == "agr_factory_assault" then
		return function( gulag )
			if db.actor and gulag then
				if gulag.state == 0 then
					if has_alife_info( "agr_factory_assault_skirmish" ) then return 1 else return 0 end
				elseif gulag.state == 1 then
					if xr_gulag.getGulagPopulation( "agr_factory_defence" ) == 0 then
						if not has_alife_info( "agr_help_stalkers_done" ) then
							TB3D_Services.give_info( "agr_help_stalkers_done" )
							TB3D_Services.give_info( "agr_help_stalkers_defence_dead" )	
						end
					end
					if has_alife_info( "agr_krot_skirmish_start" ) and
					   (has_alife_info( "agr_help_stalkers_done" ) or
					   xr_conditions.gulag_empty(nil, nil, {"agr_factory_defence"})) then
						return 2
					elseif has_alife_info( "agr_krot_skirmish_start" ) then
						return 1
					end
				else
					return 2
				end
			end
			return 0
		end
	elseif type == "agr_factory_defence" then
		return function( gulag )
			if db.actor and gulag then
				if gulag.state == 0 then
	--				--for k, v in pairs(gulag.Object) do
	--					--if v:best_enemy() then
	--						--return 1
	--					--end
	--				--end
	--				--return 0
					if has_alife_info( "agr_factory_assault_skirmish" ) then
						return 1
					else
						return 0
					end
				elseif gulag.state == 1 then
					if xr_conditions.gulag_population_active( db.actor, nil, {"agr_factory_assault"} ) > 0 then
						return 1
					else
						TB3D_Services.give_info( "agr_help_stalkers_done" )
						TB3D_Services.give_info( "agr_help_stalkers_assault_dead" )
						return 2
					end
				else
					if has_alife_info( "agr_krot_go_to_well" ) then
						return 3
					else
						return 2
					end
				end
			end
			return 0
		end
	elseif type == "agr_factory_hold" then
		return function( gulag )
			if db.actor and gulag then
				if gulag.state == 0 then
					if has_alife_info( "agr_krot_dead" ) then
						return 2
					elseif has_alife_info( "agr_krot_skirmish_start" ) then
						TB3D_hit_styles.agro_skirmish(actor, gulag)
						return 1
					else
						return 0
					end
				elseif gulag.state == 1 then
					if has_alife_info( "agr_krot_dead" ) then
						return 2
					else
						return 1
					end
				else
					return 2
				end
			end
			return 0
		end
	elseif type == "agr_road_patrol1" then
		return function( gulag )
				return 0			
		end
	elseif type == "agr_road_patrol2" then
		return function( gulag )
				return 0			
		end
	end
	return nil
end

