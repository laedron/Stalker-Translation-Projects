					"path_look = look_1_" .. i .. "\n" ..
					"danger=danger_condition@" .. gname .. "\n" ..
					"on_signal=end_1_"..i.."|walker2@" .. gname .. i .. "\n" ..

					"[walker2@" .. gname .. i .. "]\n" ..
					"team=bbb\n" ..
